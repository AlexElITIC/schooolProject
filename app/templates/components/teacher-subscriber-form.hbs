<div class="row">
   <form class="col s12" {{action 'save' model on="submit"}}>
     <div class="row">
       <div class="input-field col s6">
         <i class="material-icons prefix">account_circle</i>
         {{input id="name" type="text" class="validate" value=model.name}}
         <label for="name">Nombre</label>
       </div>
       <div class="input-field col s6">
         {{input id="last_name" type="text" class="validate" value=model.last_name}}
         <label for="last_name">Apellidos</label>
       </div>
       <div class="input-field col s6">
         <i class="material-icons prefix">phone</i>
         {{input id="icon_telephone" type="tel" class="validate" value=model.phone}}
         <label for="icon_telephone">telefono/celular</label>
       </div>
       <div class="input-field col s6">
         <i class="material-icons prefix">mail</i>
         {{input id="email" type="email" class="validate" value=model.mail}}
       <label for="email" data-error="wrong" data-success="right">mail</label>
       </div>
     </div>
     <button  class="waves-effect waves-light btn #43a047 green darken-1"><i class="material-icons left">done</i>Guardar</button>
   </form>
 </div>
